@model IEnumerable<CafeApp.Models.Blog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mt-3">
                <li class="breadcrumb-item"><a class="link-dark" href="/">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Admin Blogs</li>
            </ol>
        </nav>

        <h3>Admin Blogs</h3>
        <hr />

        <table class="table table-hover table-bordered table-striped table-sm" id="myTable">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        IsApproval
                    </th>
                    <th>
                        Message
                    </th>            
                    <th class="text-center" style="width:125px;"><i class="fa-solid fa-gear"></i></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr class="align-middle">
                        <td class="text-center">
                            @if (item.Image == null)
                            {
                                <img src="~/Site/images/no-image.jpg" width="150" height="120" />
                            }
                            else
                            {
                                <img src="@item.Image" width="150" height="120" />
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td class="text-center">
                            @if (item.Onay)
                            {
                                <i class="fa-solid fa-circle-check text-success"></i>
                            }
                            else
                            {
                                <i class="fa-solid fa-circle-xmark text-danger"></i>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Mesaj)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="fa-solid fa-pen-to-square"></i> Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="fa-solid fa-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}